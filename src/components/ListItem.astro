---
  import { Image } from 'astro:assets';

  type Props = {
    href: string;
    date: Date;
    title: string;
    description: string;
    image?: string;
    imageAlt?: string;
    imageWidth?: number;
    imageHeight?: number;
    showDivider?: boolean;
    class?: string;
  };

  const {
    href,
    date,
    title,
    description,
    image,
    imageAlt,
    imageWidth = 1200,
    imageHeight = 675,
    showDivider = false,
    class: className = "",
  } = Astro.props;
---
<li class={`group ${className}`}>
  <a
    href={href}
    class="block -mx-4 px-4 py-8 rounded-lg hover:bg-platinum/10 dark:hover:bg-slate_border/20 transition-all duration-300"
  >
    <time
      datetime={date.toISOString()}
      class="text-xs uppercase tracking-wider text-davy_gray/60 dark:text-silver_gray-700 block mb-3"
    >
      {date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })}
    </time>
    {image && (
      <div class="w-full mb-4 overflow-hidden rounded-lg border border-platinum/40 dark:border-slate_border/60">
        <Image
          src={image}
          alt={imageAlt || title}
          width={imageWidth}
          height={imageHeight}
          class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105"
        />
      </div>
    )}
    <h2
      class="text-3xl font-light text-payne_gray dark:text-silver_gray group-hover:text-thistle dark:group-hover:text-midnight_purple transition-colors duration-300 leading-tight mb-3"
    >
      {title}
    </h2>
    <p class="text-lg text-davy_gray dark:text-silver_gray-500 leading-relaxed">
      {description}
    </p>
  </a>
  {showDivider && (
    <hr class="border-t border-platinum/30 dark:border-slate_border/40 my-2" />
  )}
</li>
