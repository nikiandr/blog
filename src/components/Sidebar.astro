---
  import ThemeToggle from "./ThemeToggle.astro";

  type Props = {
    currentPath: string;
  };

  const { currentPath } = Astro.props;

  const elements = [
    {
      label: "About Me",
      href: "/about-me",
    },
    {
      label: "Photos",
      href: "/photos",
    },
    {
      label: "Blog",
      href: "/blog",
    },
    {
      label: "Contact",
      href: "/contact",
    },
  ];

  const isActive = (href: string) => {
    if (href === "/") {
      return currentPath === "/";
    }
    return currentPath.startsWith(href);
  };
---
<aside
  class="flex flex-col h-screen bg-alice_blue dark:bg-dark_slate border-r border-platinum/30 dark:border-slate_border/50 transition-colors duration-300 p-6"
>
  <!-- Name/Logo at top -->
  <div class="mb-8">
    <a
      href="/"
      class="text-payne_gray dark:text-silver_gray hover:text-thistle dark:hover:text-midnight_purple transition-colors duration-300 font-medium text-xl block"
    >
      Nikita Fordui
    </a>
  </div>

  <!-- Navigation links -->
  <nav class="flex-1 flex flex-col space-y-2">
    {elements.map((element) => {
      const active = isActive(element.href);
      return (
        <a
          href={element.href}
          data-astro-prefetch
          class={`px-4 py-3 rounded-lg transition-all duration-300 text-base ${
            active
              ? "bg-thistle/10 dark:bg-midnight_purple/10 text-thistle dark:text-midnight_purple font-medium border-l-4 border-thistle dark:border-midnight_purple"
              : "text-payne_gray dark:text-silver_gray hover:bg-platinum/10 dark:hover:bg-slate_border/20 hover:text-thistle dark:hover:text-midnight_purple"
          }`}
        >
          {element.label}
        </a>
      );
    })}
  </nav>

  <!-- Theme toggle at bottom -->
  <div
    class="mt-auto pt-6 border-t border-platinum/30 dark:border-slate_border/50 flex justify-center"
  >
    <ThemeToggle/>
  </div>
</aside>
