---
  type Props = {
    maxWidth?: "narrow" | "wide";
  };

  const { maxWidth = "narrow" } = Astro.props;
  const maxWidthClass = maxWidth === "wide" ? "max-w-6xl" : "max-w-2xl";
---
<footer
  class="border-t border-border/30 dark:border-border-dark/30 transition-colors duration-300"
>
  <div class={`${maxWidthClass} mx-auto px-6 py-4`}>
    <p class="text-xs text-ink-400 dark:text-ink_dark-500 font-sans">
      &copy; {`${new Date().getFullYear()} Nikita Fordui`}
    </p>
  </div>
</footer>
